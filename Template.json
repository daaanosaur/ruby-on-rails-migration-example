{
  "apiVersion": "v1",
  "spec": {
    "kind": "Workflow",
    "spec": {
      "type": "sequential",
      "steps": [
        {
          "kind": "Addon",
          "spec": {
            "name": "postgres",
            "description": "",
            "type": "postgres",
            "version": "14.5.0",
            "billing": {
              "deploymentPlan": "nf-compute-50",
              "storageClass": "ssd",
              "storage": 4096,
              "replicas": 1
            },
            "tlsEnabled": true,
            "externalAccessEnabled": false,
            "ipPolicies": [],
            "pitrEnabled": false,
            "typeSpecificSettings": {}
          }
        },
        {
          "kind": "SecretGroup",
          "spec": {
            "name": "postgres connection",
            "description": "",
            "secretType": "environment",
            "priority": 10,
            "restrictions": {
              "restricted": false,
              "nfObjects": []
            },
            "addonDependencies": [
              {
                "addonId": "postgres",
                "keys": [
                  {
                    "keyName": "HOST",
                    "aliases": [
                      "PG_HOST",
                      "DB_HOST"
                    ]
                  },
                  {
                    "keyName": "POSTGRES_URI",
                    "aliases": [
                      "POSTGRES_URI"
                    ]
                  },
                  {
                    "keyName": "PORT",
                    "aliases": [
                      "PORT",
                      "DB_PORT"
                    ]
                  },
                  {
                    "keyName": "USERNAME",
                    "aliases": [
                      "USERNAME",
                      "DB_USER"
                    ]
                  },
                  {
                    "keyName": "PASSWORD",
                    "aliases": [
                      "PASSWORD",
                      "DB_PASSWORD"
                    ]
                  },
                  {
                    "keyName": "DATABASE",
                    "aliases": [
                      "DATABASE",
                      "DB_NAME"
                    ]
                  }
                ]
              }
            ],
            "secrets": {}
          }
        },
        {
          "kind": "BuildService",
          "spec": {
            "name": "Rails migration example builder",
            "billing": {
              "deploymentPlan": "nf-compute-50"
            },
            "vcsData": {
              "projectUrl": "https://github.com/daaanosaur/ruby-on-rails-migration-example",
              "projectType": "github",
              "accountLogin": "daaanosaur"
            },
            "buildSettings": {
              "buildpack": {
                "builder": "HEROKU_22_CLASSIC",
                "buildpackLocators": [],
                "buildContext": "/"
              }
            },
            "buildConfiguration": {
              "prRestrictions": [
                "*"
              ],
              "branchRestrictions": [
                "main"
              ],
              "ciIgnoreFlags": [],
              "ciIgnoreFlagsEnabled": false,
              "isAllowList": false
            },
            "buildArguments": {}
          }
        },
        {
          "kind": "Build",
          "ref": "railsBuild",
          "spec": {
            "id": "rails-migration-example-builder",
            "type": "service",
            "branch": "main"
          }
        },
        {
          "kind": "Condition",
          "spec": {
            "kind": "Build",
            "spec": {
              "type": "success",
              "data": {
                "buildId": "${refs.railsBuild.internalId}"
              }
            }
          }
        },
        {
          "kind": "DeploymentService",
          "ref": "railsDeployment",
          "spec": {
            "name": "Rails migration example deployment",
            "billing": {
              "deploymentPlan": "nf-compute-50"
            },
            "deployment": {
              "instances": 1,
              "docker": {
                "configType": "default"
              },
              "buildpack": {
                "configType": "default"
              },
              "storage": {
                "ephemeralStorage": {
                  "storageSize": 1024
                }
              },
              "internal": {
                "id": "rails-migration-example-builder",
                "branch": "main",
                "buildId": "${refs.railsBuild.internalId}"
              }
            },
            "ports": [
              {
                "name": "p01",
                "internalPort": 3000,
                "public": true,
                "protocol": "HTTP",
                "security": {
                  "credentials": [],
                  "policies": []
                },
                "domains": [],
                "disableNfDomain": false
              }
            ],
            "healthChecks": [],
            "runtimeEnvironment": {}
          }
        },
        {
          "kind": "Condition",
          "spec": {
            "kind": "Service",
            "spec": {
              "type": "running",
              "data": {
                "serviceId": "${refs.railsDeployment.id}"
              }
            }
          }
        },
        {
          "kind": "Action",
          "spec": {
            "kind": "Service",
            "spec": {
              "type": "execute",
              "data": {
                "serviceId": "${refs.railsDeployment.id}",
                "command": "launcher bin/rails db:migrate"
              }
            }
          }
        },
        {
          "kind": "Action",
          "spec": {
            "kind": "Service",
            "spec": {
              "type": "restart",
              "data": {
                "serviceId": "${refs.railsDeployment.id}"
              }
            }
          }
        },
        {
          "kind": "ManualJob",
          "spec": {
            "name": "migrate db",
            "billing": {
              "deploymentPlan": "nf-compute-20"
            },
            "backoffLimit": 0,
            "runOnSourceChange": "never",
            "activeDeadlineSeconds": 600,
            "deployment": {
              "docker": {
                "configType": "default"
              },
              "buildpack": {
                "configType": "customProcess",
                "customProcess": "release"
              },
              "storage": {
                "ephemeralStorage": {
                  "storageSize": 1024
                }
              },
              "internal": {
                "id": "rails-migration-example-builder",
                "branch": "main",
                "buildId": "${refs.railsBuild.internalId}"
              }
            },
            "healthChecks": [],
            "buildConfiguration": {
              "pathIgnoreRules": [],
              "isAllowList": false,
              "ciIgnoreFlagsEnabled": false
            },
            "runtimeEnvironment": {},
            "buildArguments": {}
          }
        }
      ]
    }
  },
  "name": "Ruby on Rails with Postgres",
  "description": "Ruby on Rails buildpack example with migration",
  "project": {
    "spec": {
      "name": "Rails migration example",
      "region": "europe-west",
      "description": "",
      "color": "#EF233C"
    }
  }
}